<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/Content/css/style.default.css" type="text/css" />
    <link rel="stylesheet" href="/Content/font-awesome/css/font-awesome.css" />
    @RenderSection("headLink", required: false)
    <script type="text/javascript" src="~/Content/js/plugins/jquery-1.7.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.cookie.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.uniform.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.flot.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.flot.resize.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.slimscroll.js"></script>
    <script type="text/javascript" src="/Content/js/custom/general.js"></script>
    <script type="text/javascript" src="~/Content/layer/layer.js"></script>
    <script type="text/javascript">
        function openProfile () {
            layer.open({
                type: 2,
                title: '个人信息编辑',
                shadeClose: true,
                shade: 0.8,
                area: ['550px', '500px'],
                content: '/Home/UserProfile' //iframe的url
            });
        }
    </script>
    @RenderSection("headScript", required: false)
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="/Content/js/plugins/excanvas.min.js"></script><![endif]-->
    <!--[if IE 9]>
        <link rel="stylesheet" media="screen" href="/Content/css/style.ie9.css"/>
    <![endif]-->
    <!--[if IE 8]>
        <link rel="stylesheet" media="screen" href="/Content/css/style.ie8.css"/>
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="/Content/js/plugins/css3-mediaqueries.js"></script>
    <![endif]-->

</head>
<body>
    <div class="bodywrapper">
        <div class="topheader">
            <div class="left">
                <h1 class="logo">长沙理工大学</h1>
                <span class="slogan">综合管理系统</span>

                @*<div class="search">
                        <form action="" method="post">
                            <input type="text" name="keyword" id="keyword" value="请输入" />
                            <button class="submitbutton"></button>
                        </form>
                    </div>*@<!--search-->

                <br clear="all" />

            </div><!--left-->

            <div class="right">
                <!--<div class="notification">
                    <a class="count" href="ajax/notifications.html"><span>9</span></a>
                </div>-->
                <div class="userinfo">
                    <img src="/Content/images/thumbs/avatar.png" alt="" />
                    @if (ViewBag.RoleId == 0)
                    {
                        <span>@ViewBag.AdminUser，管理员</span>
                    }
                    else if (ViewBag.RoleId == 1)
                    {
                        <span>@ViewBag.AdminUser，教师</span>
                    }
                    else
                    {
                        <span>@ViewBag.AdminUser，学生</span>
                    }
                </div><!--userinfo-->

                <div class="userinfodrop">
                    <div class="avatar">
                        <a href=""><img src="/Content/images/thumbs/avatarbig.png" alt="" /></a>
                    </div><!--avatar-->
                    <div class="userdata">
                        <h4>@ViewBag.AdminUser</h4>
                        <span class="email">个人信息管理</span>
                        <ul>
                            <li><a href="javascript:void(0);" onclick="openProfile();">账号设置</a></li>
                            <li><a href="/Account/Logout">退出</a></li>
                        </ul>
                    </div><!--userdata-->
                </div><!--userinfodrop-->
            </div><!--right-->
        </div><!--topheader-->


        <div class="header">
            <ul class="headermenu">
                <li id="home"><a href="/Home/Index"><span class="h h-flatscreen"></span>首页</a></li>
                <li id="student"><a href="/Student/Index"><span class="h h-pencil"></span>学生管理</a></li>
                @if (ViewBag.RoleId == 0)
                {
                <li id="teacher"><a href="/Teacher/Index"><span class="h h-users"></span>教师管理</a></li>
                }
            </ul>
        </div><!--header-->

        @RenderBody()


    </div><!--bodywrapper-->
    @RenderSection("endScript", required: false)
</body>
</html>

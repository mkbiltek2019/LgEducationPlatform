<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="/Content/css/style.default.css" type="text/css" />
    @RenderSection("headLink", required: false)
    <script type="text/javascript" src="/Content/js/plugins/jquery-1.7.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery-ui-1.8.16.custom.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.cookie.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.uniform.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.flot.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.flot.resize.min.js"></script>
    <script type="text/javascript" src="/Content/js/plugins/jquery.slimscroll.js"></script>
    <script type="text/javascript" src="/Content/js/custom/general.js"></script>
    @RenderSection("headScript", required: false)
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="js/plugins/excanvas.min.js"></script><![endif]-->
    <!--[if IE 9]>
        <link rel="stylesheet" media="screen" href="css/style.ie9.css"/>
    <![endif]-->
    <!--[if IE 8]>
        <link rel="stylesheet" media="screen" href="css/style.ie8.css"/>
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="js/plugins/css3-mediaqueries.js"></script>
    <![endif]-->

</head>
<body>
    <div class="bodywrapper">
        <div class="topheader">
            <div class="left">
                <h1 class="logo">长沙理工大学</h1>
                <span class="slogan">综合管理系统</span>

                @*<div class="search">
                    <form action="" method="post">
                        <input type="text" name="keyword" id="keyword" value="请输入" />
                        <button class="submitbutton"></button>
                    </form>
                </div>*@<!--search-->

                <br clear="all" />

            </div><!--left-->

            <div class="right">
                <!--<div class="notification">
                    <a class="count" href="ajax/notifications.html"><span>9</span></a>
                </div>-->
                <div class="userinfo">
                    <img src="/Content/images/thumbs/avatar.png" alt="" />
                    @if (ViewBag.RoleId == "0")
                    {
                    <span>@ViewBag.AdminUser，管理员</span>
                    }
                    else if (ViewBag.RoleId == "1")
                    {
                    <span>@ViewBag.AdminUser，教师</span>
                    }
                    else
                    {
                    <span>@ViewBag.AdminUser，学生</span>
                    }
                </div><!--userinfo-->

                <div class="userinfodrop">
                    <div class="avatar">
                        <a href=""><img src="/Content/images/thumbs/avatarbig.png" alt="" /></a>
                        <div class="changetheme">
                            切换主题: <br />
                            <a class="default"></a>
                            <a class="blueline"></a>
                            <a class="greenline"></a>
                            <a class="contrast"></a>
                            <a class="custombg"></a>
                        </div>
                    </div><!--avatar-->
                    <div class="userdata">
                        <h4>@ViewBag.AdminUser</h4>
                        <span class="email">个人信息管理</span>
                        <ul>
                            <li><a href="editprofile.html">修改密码</a></li>
                            <li><a href="accountsettings.html">账号设置</a></li>
                            <li><a href="javascript:void(0);">帮助</a></li>
                            <li><a href="/Account/Logout">退出</a></li>
                        </ul>
                    </div><!--userdata-->
                </div><!--userinfodrop-->
            </div><!--right-->
        </div><!--topheader-->


        <div class="header">
            <ul class="headermenu">
                <li id="home"><a href="/Home/Index"><span class="icon icon-flatscreen"></span>首页</a></li>
                <li id="student"><a href="/Student/Index"><span class="icon icon-pencil"></span>学生管理</a></li>
                <li id="teacher"><a href="/Teacher/Index"><span class="icon icon-users"></span>教师管理</a></li>
            </ul>
        </div><!--header-->

        @RenderBody()


    </div><!--bodywrapper-->
    @RenderSection("endScript", required: false)
</body>
</html>

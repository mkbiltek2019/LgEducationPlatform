@model Lg.EducationPlatform.ViewModel.EditUserViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>编辑用户信息</title>
    @Styles.Render("~/Content/css")
    <style type="text/css">
        .sp {
            display: inline-block;
            margin-left: 15px;
            width: 300px;
        }

        input[type='password'] {
            padding: 8px 5px;
        }

        .label {
            float: none;
            text-align: right;
            width: 120px;
            display: inline-block;
            margin-bottom: 5px;
        }

        .formbtn {
            float: right;
            padding-right: 50px;
        }

        .formbtntip {
            color: red;
            padding-right: 15px;
        }
    </style>
    @Scripts.Render("~/bundles/plugins")
    @Scripts.Render("~/bundles/form")
    <script type="text/javascript">
        jQuery.noConflict();
        jQuery(function () {
            var index = parent.layer.getFrameIndex(window.name);
            jQuery('input:checkbox, input:radio, select.uniformselect, input:password').uniform();

            var id = jQuery('#Id').val();

            jQuery("#addteacherform").validate({
                rules: {
                    UserName: {
                        maxlength: 30,
                        remote: {
                            url: "/Teacher/ValidateUser",
                            type: "post",
                            dataType: 'json',
                            data: {
                                'username': function () { return jQuery('#UserName').val(); }
                            }
                        }
                    },
                    RealName: {
                        maxlength: 5
                    },
                    Email: {
                        email: true
                    },
                    Phone: {
                        minlength: 11,
                        maxlength: 11,
                        isPhoneNum: true
                    },
                    Password: {
                        maxlength: 30
                    },
                    ConfirmPassword: {
                        equalTo: "#Password"
                    }
                },
                messages: {
                    UserName: {
                        maxlength: "您输入的用户名太长",
                        remote: "用户名已经存在"
                    },
                    RealName: {
                        maxlength: "您输入的真实姓名太长"
                    },
                    Email: {
                        email: "邮箱格式不正确"
                    },
                    Phone: {
                        maxlength: "请填写11位的手机号",
                        minlength: "请填写11位的手机号",
                        isPhoneNum: "请填写正确的手机号码"
                    },
                    Password: {
                        maxlength: "您输入的初始密码太长了"
                    },
                    ConfirmPassword: {
                        equalTo: "两次密码输入不一致"
                    }
                },
                submitHandler: function (form) {
                    jQuery.post("/Home/EditProfile", jQuery(form).serialize(), function (data) {
                        if (data.Status == "1") {
                            parent.layer.close(index);
                        } else {
                            layer.alert(data.Message);
                        }
                    });
                }
            });

            if (id > 0) {
                jQuery("#Password").rules("remove");
            }

            $('#file_upload').uploadify({
                'swf'        : '@Url.Content("~/Scripts/uploadify-v3.1/uploadify.swf")',
                'uploader'   : '/Home/Upload'
            });
        });

        //自定义手机号验证
        jQuery.validator.addMethod("isPhoneNum", function (value, element) {
            var length = value.length;
            var mobile = /^1[3|5|8]{1}[0-9]{9}$/;
            return this.optional(element) || (length == 11 && mobile.test(value));
        }, "请正确填写您的手机号码");
    </script>
    <!--[if lte IE 8]><script language="javascript" type="text/javascript" src="/Content/js/plugins/excanvas.min.js"></script><![endif]-->
    <!--[if IE 9]>
        <link rel="stylesheet" media="screen" href="/Content/css/style.ie9.css"/>
    <![endif]-->
    <!--[if IE 8]>
        <link rel="stylesheet" media="screen" href="/Content/css/style.ie8.css"/>
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="/Content/js/plugins/css3-mediaqueries.js"></script>
    <![endif]-->
</head>
<body>
    <div class="contentwrapper">
        <form id="addteacherform" class="stdform" method="post" action="">
            <p>
                <span class="label">
                    用户名
                </span>
                    <span class="sp">
                        @Html.TextBoxFor(m => m.UserName, new { @class = "longinput" })
                    </span>
</p>
            <p>
                <span class="label">
                    真实姓名
                </span>
                    <span class="sp">
                        @Html.TextBoxFor(m => m.RealName, new { @class = "longinput" })
                    </span>
</p>
            <p>
                <span class="label">
                    密码
                </span>
                    <span class="sp">
                        @Html.PasswordFor(m => m.Password, new { @class = "longinput" })
                    </span>
</p>
            <p>
                <span class="label">确认密码</span>
                <span class="sp">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "longinput" })
                </span>
            </p>
            <p>
                <span class="label">手机</span>
                <span class="sp">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "longinput" })
                </span>
            </p>
            <p>
                <span class="label">邮箱</span>
                <span class="sp">
                    @Html.TextBoxFor(m => m.Email, new { @class = "longinput" })
                </span>
            </p>
            <p class="stdformbutton formbtn">
                @Html.HiddenFor(m => m.UserId)
                <span class="formbtntip">注意，信息为空时不修改</span>
                <button class="submit radius2">提交信息</button>
            </p>
        </form>
    </div>
</body>
</html>

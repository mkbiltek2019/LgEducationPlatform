@model Lg.EducationPlatform.ViewModel.StudentViewModel
@{
    ViewBag.Title = "长沙理工大学综合管理系统|学生管理|查看";
}

@section headLink{
    <style type="text/css">
        p label {
            float: left;
            width: 200px;
            text-align: right;
            padding: 0px 20px 0 0;
        }
        .field {
            padding-left: 20px;
        }
    </style>
}

@section headScript{
    <script type="text/javascript" src="~/Content/layer/layer.js"></script>
    <script type="text/javascript">
        jQuery.noConflict();
        jQuery(function () {
            jQuery('#student,#stu_info').addClass('current');
            jQuery('body').addClass('withvernav');
        });
    </script>
}

@{ Html.RenderPartial("~/Views/Shared/_StudentMenu.cshtml"); }

<div class="centercontent">
    <ul class="breadcrumbs">
        <li><a>首页</a></li>
        <li><a href="">学生管理</a></li>
        <li>查看详情</li>
    </ul>

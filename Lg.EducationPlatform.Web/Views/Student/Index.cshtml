                    { "sWidth": "12%", "mDataProp": "MajorName" },
                    { "sWidth": "15%", "mDataProp": "IdCard" },
                    {
                        "sWidth": "10%", "mDataProp": "ExaminationLevel",
                        "mRender": function (data, type, row) {
                            var value = "本科";
                            if (data == 1)

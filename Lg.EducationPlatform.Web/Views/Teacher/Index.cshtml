@{
    ViewBag.Title = "长沙理工大学综合管理系统|教师管理";
}

@section headLink{
    <link rel="stylesheet" href="~/Content/css/style.datatable.css" type="text/css" />
    <style type="text/css">
        .ui-widget-header {
            border-right: medium none;
            border-top: 1px solid #D5D5D5;
            font-weight: normal;
            margin-top: -1px;
        }
        .delaction {
            border-radius: 4px;
            display: inline-block;
            padding: 1px 4px;
